<%- include('templateTop') %>
    <h1 class="appName"><%= title %></h1>
    <p>Welcome to <em>Message Board</em>, a very basic Express website to show off user creation and authentication.</p>
    <h2>
        <% if(error){ %>
            <p>Error getting dynamic content.</p>
            <% }else{ %>
                <p class="messageContainer">Start exploring using the sidebar!</p>
                <div class="messageContainer">
                <p>Site Data:</p>
                <ul>
                    <li>Users: <%=data.userCount%></li>
                    <li>Members: <%=data.memberCount%></li>
                    <li>Admins: <%=data.adminCount%></li>
                    <li>Messages: <%=data.messageCount%></li>
                </ul>
            </div>
            <% } %>
    </h2>
<%- include('templateBottom') %>